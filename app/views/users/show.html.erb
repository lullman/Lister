<h1>User View</h1>
<h2><%= @user %></h2>
<h2><%= @user.username %></h2>
<h2>Your Lists</h2>
<table>
  <th>
    <td>List Name</td>
    <td>List Type</td>
  </th>
  <% @user.lists.each do |list| %>
    <tr>
      <td><%= link_to list.list_name, user_list_path(user_id: @user.id, id: list.id) %></td>
      <td><%= list.list_type %></td>
    </tr>
  <% end %>
</table>
<h2>Your Shared Lists</h2>
<table>
  <th>
    <td>List Name</td>
    <td>List Type</td>
  </th>
  <% @user.collaborations.each do |list| %>
    <tr>
      <td><%= list.list_name %></td>
      <td><%= list.list_type %></td>
    </tr>
  <% end %>
</table>